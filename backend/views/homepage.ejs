<div class="card">
    <div class="card-body">
        <h1>Welcome, <%= userInfo.email %>!</h1>
        <h2>Your Current Calendar</h2>
        <% if (events && events.length > 0) { %>
            <% events.forEach(event => { %>
                <p><%= event.start.dateTime || event.start.date %> - <%= event.end.dateTime || event.end.date %>: <%= event.summary %></p>
            <% }) %>
        <% } else { %>
            <p>No events found.</p>
        <% } %>
        <form action="/calendar/schedule" method="post">
            <button type="submit" class="btn btn-primary">Plan Meals</button>
        </form>
    </div>
</div>
